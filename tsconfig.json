{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "jsx": "react",
    "lib": ["ES2019", "DOM"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "moduleResolution": "node",
    "module": "ES2015",
    "target": "ESNext"
  },
  "exclude": [
    "bazel-out",
    "dist",
  ]
}
